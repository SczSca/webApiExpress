<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.15.25/dist/css/uikit.min.css" />
    <title><%= title %></title>
  </head>
  <body>
    <section id="sectionRegisterForm">
        <div class="uk-container uk-width-1-3 uk-background-muted" id="registerInput">
            <h2 class="align-center">Registrar Producto</h2>
            <form class="uk-form-horizontal" id="registerForm" name="registerForm" action="/productos" method="POST">
                
                <div class="uk-margin">
                    <div class="uk-form-label">
                        <label class="uk-text-primary uk-text-default" for="id">Id</label>
                    </div>
                    <div class="uk-form-controls">
                        <input class="uk-input uk-width-1-1" name="id" type="number" min="0" required>
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-form-label">
                        <label class="uk-text-primary uk-text-default" for="name">Nombre</label>
                    </div>
                    <div class="uk-form-controls">
                        <input class="uk-input uk-width-1-1" name="name" type="text" required>
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-form-label">
                        <label class="uk-text-primary uk-text-default" for="cost">Costo</label>
                    </div>
                    <div class="uk-form-controls">
                        <input class="uk-input uk-width-1-1" name="cost" type="number" min="0" required>
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-form-label">
                        <label class="uk-text-primary uk-text-default" for="quantity">Cantidad</label>
                    </div>
                    <div class="uk-form-controls">
                        <input class="uk-input uk-width-1-1" name="quantity" type="number" min="0" required>
                    </div>
                </div>
                
                <div class="uk-margin align-center">
                    <input class="uk-button-primary uk-button-large" type="submit" value="Registrarse">
                </div>
                <!-- <label class="uk-text-primary uk-text-default" for="password">Contrase√±a</label>
                <input class="uk-input" name="password" type="password" required> -->
            </form>
        </div>
    </section>
    <section id="sectionProductsTable">
        <table class="uk-table">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Costo
                    </th>
                </tr>
            </thead>
            <tbody id="productTableData">
                <% for(let i =0;i < productos.length; i++){ %>
                    <tr>
                        <td>
                            <%= productos[i].getId() %>
                        </td>
                        <td>
                            <%= productos[i].getNombre() %>
                        </td>
                        <td>
                            <%= productos[i].getCantidad() %>
                        </td>
                        <td>
                            <%= productos[i].getCosto() %>
                        </td>
                    </tr>
                <% } %>
                %>
            </tbody>
        </table>
    </section>
  </body>
</html>